@page "/r_inventario"
@page "/inventario/{inventarioId:int}"


<EditForm Model="inventario" OnValidSubmit="Guardar">
    <DataAnnotationsValidator />

    <div class="shadow">
        <div class="modal-header">
            <h1><strong>Registro de inventario</strong></h1>
        </div>
        <br>
        <br>
        <div class="accordion-body">
            <div class="row">
                <div class="col-md-2">
                    <div class="input-group">
                        <div class="group">
                            <InputNumber required="" @bind-Value="inventario.InventarioId" class="input" id="id" />
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label>No. ID</label>
                            <button type="button" class="btn" @onclick="Buscar" id="boton">
                                <span class="btn-text-one">Buscar</span>
                                <span style="color: white;" class="btn-text-two">Buscar</span>
                            </button>
                        </div>

                    </div>

                </div>

            </div>

            <br>
            <br>
            <div class="col-md-1">
                <div class="group">
                    <InputNumber required="" @bind-Value="inventario.ProductoId" class="input" />
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label>Producto ID</label>
                </div>
            </div>
            <br>
            <br>
            <div class="col-md-6">
                <div class="group">
                    <InputNumber required="" @bind-Value="inventario.Existencia" class="input" />
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label>Existencia</label>
                </div>
            </div>

            <aside id="cuadrado">

            </aside>

            <aside id="cuadradito">

            </aside>

        </div>

        @*Botones*@
        <hr>
        <div class="text-center">
            <button type="button" class="btn btn-outline-primary" @onclick="Nuevo"><span class="oi oi-file"></span>
                Nuevo</button>
            <button type="submit" class="btn btn-outline-success"><span class="oi oi-document"></span>
                Guardar</button>
            <button type="button" class="btn btn-outline-danger" @onclick="Eliminar"><span class="oi oi-delete"></span>
                Eliminar</button>
            <br>
            <br>
        </div>
    </div>
</EditForm>

